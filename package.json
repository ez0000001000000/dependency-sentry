{
  "name": "dependency-sentry",
  "version": "1.0.12",
  "description": "A powerful dependency checker and updater for Node.js projects",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "dependency-sentry": "src/cli.js",
    "dep-check": "src/cli.js"
  },
  "scripts": {
    "dep-check": "node src/cli.js",
    "start": "node src/cli.js",
    "test": "set NODE_OPTIONS=--experimental-vm-modules && jest",
    "test:watch": "set NODE_OPTIONS=--experimental-vm-modules && jest --watch",
    "test:coverage": "set NODE_OPTIONS=--experimental-vm-modules && jest --coverage",
    "lint": "eslint ."
  },
  "keywords": [
    "dependency",
    "security",
    "vulnerability",
    "update",
    "npm",
    "yarn",
    "pnpm"
  ],
  "author": "ez0000001000000 <hi@snowbasestudio.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ez0000001000000/dependency-sentry.git"
  },
  "bugs": {
    "url": "https://github.com/ez0000001000000/dependency-sentry/issues",
    "downloads": {
      "week": "https://api.npmjs.org/downloads/point/last-week/dependency-sentry",
      "month": "https://api.npmjs.org/downloads/point/last-month/dependency-sentry"
    }
  },
  "dependencies": {
    "chalk": "5.6.2",
    "commander": "^14.0.2",
    "inquirer": "13.2.0",
    "node-fetch": "3.3.2",
    "ora": "^9.0.0",
    "semver": "^7.7.3",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "core-js": "^3.47.0",
    "eslint": "^9.39.2",
    "jest": "^30.2.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
